---
import HeaderLink from './HeaderLink.astro'
import { SITE_TITLE } from '../consts'

const navLinks = [
  { name: 'Blog', href: '/blog' },
  { name: 'Tagovi', href: '/tags' },
  { name: 'Vijesti', href: '/vijesti' },
  { name: 'O meni', href: '/about' },
]
---

<header>
  <div class="navbar bg-base-300">
    <div class="navbar-start w-full md:w-auto">
      <div class="dropdown md:hidden">
        <label tabindex="0" class="btn btn-ghost btn-circle">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h7"></path></svg
          >
        </label>
        <ul
          tabindex="0"
          class="menu dropdown-content mt-3 p-2 shadow bg-base-300 rounded-box w-52"
        >
          {
            navLinks.map((link) => (
              <li>
                <HeaderLink href={link.href} class="btn btn-ghost">
                  {link.name}
                </HeaderLink>
              </li>
            ))
          }
        </ul>
      </div>
      <a
        href="/"
        class="btn btn-ghost mx-auto normal-case text-xl md:m-0 lg:text-xl"
        ><h1>üè† {SITE_TITLE}</h1></a
      >
    </div>
    <nav class="navbar-center mx-auto hidden md:flex">
      {
        navLinks.map((link) => (
          <HeaderLink href={link.href} class="btn btn-ghost lg:text-lg">
            {link.name}
          </HeaderLink>
        ))
      }
    </nav>
  </div>
</header>
